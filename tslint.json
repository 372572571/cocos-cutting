{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {
        "semi": true
    },
    "rules": {
        "quote-props": false,
        "no-console": false, // 关闭console告警
        "semi": true,
        "no-unwanted-initializer": true,
        "deprecation": true,
        "no-null-keyword": false, //不允许使用null关键字
        "no-null-undefined-union": false,
        "type-literal-delimiter": true,
        "semicolon": [
            true,
            "always"
        ],
        "no-bitwise": false,
        "ariable-name": false,
        "interface-name": false,
        "max-line-length": false,
        "variable-name": false,
        "prefer-for-of": false,
        "forin": false,
        "object-literal-sort-keys": false,
        "no-empty": false
    },
    "rulesDirectory": [
        "src"
    ]
}